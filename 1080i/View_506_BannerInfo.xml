<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video BannerInfo -->
	<include name="VideoBannerInfo">
		<control type="group">
			<visible>Control.IsVisible(506) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
            <control type="fixedlist" id="506">
				<viewtype label="31085">icon</viewtype>
				<left>115</left>
				<top>73</top>
				<height>905</height>
				<width>980</width>
                <onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>506</onup>
				<ondown>506</ondown>
				<orientation>vertical</orientation>
				<focusposition>2</focusposition>
                <movement>2</movement>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<pagecontrol>60</pagecontrol>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout width="980" height="181">
					<control type="image">
						<width>980</width>
						<height>181</height>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<fadetime>300</fadetime>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="image">
						<width>980</width>
						<height>181</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>300</fadetime>
						<visible>IsEmpty(ListItem.Art(banner)) + StringCompare(ListItem.Label,..)</visible>
					</control>
                    <control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>980</width>
                            <height>181</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>300</fadetime>
						</control>
						<control type="image">
							<left>15</left>
							<width>400</width>
							<height>181</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<fadetime>300</fadetime>
						</control>
					</control>
					<control type="image">
						<width>980</width>
						<height>181</height>
						<texture>thumbs/diffuse.png</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<left>920</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="980" height="181">
                    <control type="group">
                        <animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="group">
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
							<control type="image">
								<width>980</width>
								<height>181</height>
								<aspectratio align="center" aligny="center">scale</aspectratio>
								<texture background="true">$VAR[BannerThumb]</texture>
								<fadetime>300</fadetime>
								<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner)) + StringCompare(ListItem.Label,..)</visible>
							<control type="image">
								<width>980</width>
								<height>181</height>
								<texture>background.png</texture>
								<fadetime>300</fadetime>
								<colordiffuse>background</colordiffuse>
								<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<width>980</width>
								<height>181</height>
								<aspectratio align="center" aligny="center">keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<fadetime>300</fadetime>	
							</control>
						</control>
                        <control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<width>980</width>
                                <height>181</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
								<fadetime>300</fadetime>
								<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<left>15</left>
								<width>400</width>
								<height>181</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<fadetime>300</fadetime>
								<bordersize>2</bordersize>
							</control>
						</control>
                        <control type="image">
							<left>912</left>
							<top>8</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
                    </control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>30</top>
				<width>14</width>
				<height>1035</height>
				<onright>506</onright>
				<onleft>506</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
			<control type="grouplist">
				<top>73</top>
				<left>1130</left>
				<itemgap>15</itemgap>
				<control type="image">
					<left>1122</left>
					<top>92</top>
					<width>685</width>
					<height>385</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					<fadetime>300</fadetime>
					<visible>!IsEmpty(ListItem.Art(fanart))</visible>
				</control>
				<control type="label">
					<left>1110</left>
					<top>487</top>
					<width>685</width>
					<height>40</height>
					<font>font16_title</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>[B]$VAR[FloorLabelVar][/B]</label>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Genre]</label>
					<width>685</width>
					<height>40</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<label>$VAR[VideoSubLabelVar]</label>
					<width>685</width>
					<height>40</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
				</control>
				<control type="textbox">
					<label>$VAR[VideoPlotVar]</label>
					<top>654</top>
					<left>1125</left>
					<width>685</width>
					<height>345</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
			</control>
		</control>
	</include>
</includes>