<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video InfoWall -->
	<include name="VideoInfoWall">
		<control type="group">
			<visible>Control.IsVisible(51) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<top>-105</top>
			<control type="panel" id="51">
				<left>105</left>
				<top>179</top>
				<width>1000</width>
				<height>900</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>51</onup>
				<ondown>51</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31021">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout height="300" width="200">
					<control type="image">
						<width>200</width>
						<height>300</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[PosterThumb]</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<width>200</width>
						<height>300</height>
						<texture>thumbs/diffuse.png</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<left>140</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="200">
					<control type="group">
						<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="image">
							<width>200</width>
							<height>300</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[PosterThumb]</texture>
							<fadetime>300</fadetime>
							<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>132</left>
							<top>8</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>135</top>
				<width>14</width>
				<height>1035</height>
				<onright>51</onright>
				<onleft>51</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
			<control type="grouplist">
				<top>179</top>
				<left>1140</left>
				<itemgap>15</itemgap>
				<control type="image">
					<width>680</width>
					<height>400</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					<fadetime>400</fadetime>
					<visible>!IsEmpty(ListItem.Art(fanart))</visible>
				</control>
				<control type="label">
					<width>680</width>
					<height>32</height>
					<font>font16_title</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>[B]$VAR[FloorLabelVar][/B]</label>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Genre]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<label>$VAR[VideoSubLabelVar]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
				</control>
				<control type="textbox">
					<label>$VAR[VideoPlotVar]</label>
					<width>680</width>
					<height>342</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
			</control>
		</control>
	</include>
	<!-- Music InfoWall -->
