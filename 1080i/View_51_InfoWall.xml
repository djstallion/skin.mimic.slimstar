			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>110</top>
				<width>14</width>
				<height>1035</height>
				<onright>50</onright>
				<onleft>50</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
			<control type="grouplist">
				<top>179</top>
				<left>1090</left>
				<itemgap>15</itemgap>
				<control type="image">
					<width>680</width>
					<height>400</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					<visible>!IsEmpty(ListItem.Art(fanart))</visible>
					<fadetime>400</fadetime>
				</control>
				<control type="label">
					<width>680</width>
					<height>32</height>
					<font>font16_title</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>[B]$VAR[FloorLabelVar][/B]</label>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Artist]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Year]$INFO[ListItem.Genre, â€¢ ]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Property(Artist_Genre)]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<visible>Container.Content(artists)</visible>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Property(Artist_YearsActive)]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>grey</textcolor>
					<visible>Container.Content(artists)</visible>
				</control>
				<control type="textbox">
					<label>$VAR[MusicPlotVar]</label>
					<width>680</width>
					<height>342</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
