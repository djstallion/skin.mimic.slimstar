<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video Episode -->
	<include name="VideoEpisode">
		<control type="group">
			<visible>Control.IsVisible(502) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="group">
				<left>0</left>
				<top>-15</top>
				<control type="image">
					<left>50</left>
					<top>870</top>
					<width>390</width>
					<height>164</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Art(tvshow.clearlogo)]</texture>
				</control>
				<control type="fixedlist" id="502">
					<left>60</left>
					<top>180</top>
					<width>1820</width>
					<height>780</height>
					<orientation>vertical</orientation>
					<movement>2</movement>
					<focusposition>3</focusposition>
					<onleft>SetProperty(MediaMenu,True,home)</onleft>
					<onleft>SetFocus(9050)</onleft>
					<onright>60</onright>
					<onup>502</onup>
					<ondown>502</ondown>
					<pagecontrol>60</pagecontrol>
					<viewtype label="31093">list</viewtype>
					<scrolltime tween="quadratic" easing="out">200</scrolltime>
					<visible>Container.Content(episodes)</visible>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(0)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(1)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(2)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(3)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(4)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(5)">Conditional</animation>
					<itemlayout height="100" width="1820" condition="Container.Content(episodes)">
						<control type="label">
							<left>925</left>
							<width>790</width>
							<height>70</height>
							<font>font30</font>
							<textcolor>grey</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>right</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
							<left>1750</left>
							<top>5</top>
							<width>64</width>
							<height>64</height>
							<aspectratio>keep</aspectratio>
							<texture>$VAR[ListItem.Overlay]</texture>
						</control>
					</itemlayout>
					<focusedlayout height="275" width="1820" condition="Container.Content(episodes)">
						<control type="image">
							<left>1250</left>
							<top>-25</top>
							<width>484</width>
							<height>290</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>IconCrossfadeTime</fadetime>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>1270</left>
							<top>195</top>
							<width>444</width>
							<height>50</height>
							<texture>black.png</texture>
							<colordiffuse>88ffffff</colordiffuse>
						</control>
						<control type="label">
							<left>1270</left>
							<top>200</top>
							<width>444</width>
							<height>40</height>
							<align>left</align>
							<textoffsetx>10</textoffsetx>
							<textcolor>grey</textcolor>
							<label>$INFO[ListItem.Label2]</label>
							<font>font14</font>
						</control>
						<control type="label">
							<left>1271</left>
							<top>200</top>
							<width>444</width>
							<height>40</height>
							<align>right</align>
							<textoffsetx>10</textoffsetx>
							<textcolor>grey</textcolor>
							<label>$VAR[VideoListLabel2Var]</label>
							<font>font14</font>
						</control>
						<control type="label">
							<top>-15</top>
							<width>1220</width>
							<height>70</height>
							<font>font30</font>
							<textcolor>white</textcolor>
							<selectedcolor>selected</selectedcolor>
							<align>right</align>
							<aligny>center</aligny>
							<label>[B]$INFO[ListItem.Label][/B]</label>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(502)">Conditional</animation>
						</control>
						<control type="textbox">
							<label>$VAR[VideoPlotVar]</label>
							<top>60</top>
							<left>370</left>
							<width>850</width>
							<height>182</height>
							<align>right</align>
							<textcolor>white</textcolor>
							<font>font15_textbox</font>
							<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
							<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(502)">Conditional</animation>
						</control>
						<control type="image">
							<left>1750</left>
							<top>94</top>
							<width>64</width>
							<height>64</height>
							<aspectratio>keep</aspectratio>
							<texture>$VAR[ListItem.Overlay]</texture>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="60">
					<left>1906</left>
					<top>45</top>
					<width>14</width>
					<height>1035</height>
					<onup>60</onup>
					<ondown>60</ondown>
					<onleft>502</onleft>
					<onright>502</onright>
					<orientation>vertical</orientation>
				</control>
			</control>
		</control>
	</include>
</includes>