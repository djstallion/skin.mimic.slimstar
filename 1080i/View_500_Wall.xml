<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Picture Wall -->
	<include name="PictureWall">
		<control type="group">
			<visible>Control.IsVisible(510) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<top>-80</top>
			<control type="button">
				<left>0</left>
				<top>35</top>
				<width>20</width>
				<height>980</height>
				<align>left</align>
				<aligny>center</aligny>
				<texturefocus>false</texturefocus>
				<onfocus>SetProperty(MediaMenu,True,home)</onfocus>
			</control>
			<control type="panel" id="510">
				<left>120</left>
				<top>155</top>
				<width>1680</width>
				<height>900</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>510</onup>
				<ondown>510</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>!Container.Content(addons)</visible>
				<itemlayout height="300" width="560">
					<control type="image">
						<width>560</width>
						<height>300</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<width>560</width>
						<height>300</height>
						<texture border="0,0,0,50">thumbs/diffuse_music.png</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="label">
						<top>260</top>
						<width>560</width>
						<height>28</height>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey</textcolor>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<top>260</top>
						<width>560</width>
						<height>28</height>
						<align>right</align>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey</textcolor>
						<info>ListItem.Label2</info>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="560">
					<control type="group">
						<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="image">
							<width>560</width>
							<height>300</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>300</fadetime>
							<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>110</top>
				<width>14</width>
				<height>1035</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
		</control>
	</include>
</includes>