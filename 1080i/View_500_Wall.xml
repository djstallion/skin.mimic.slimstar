<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video Wall -->
	<include name="VideoWall">
		<control type="group">
			<visible>Control.IsVisible(500) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="panel" id="500">
				<left>120</left>
				<top>165</top>
				<width>1680</width>
				<height>720</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>500</onup>
				<ondown>500</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(sets) | [Container.Content(files) + Container(500).HasFiles]</visible>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="360" width="240" condition="Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(sets)">
					<control type="image">
						<width>240</width>
						<height>360</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[PosterThumb]</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<width>240</width>
						<height>360</height>
						<texture>thumbs/diffuse.png</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<left>180</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="360" width="240" condition="Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(sets)">
					<control type="group">
						<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>240</width>
							<height>360</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[PosterThumb]</texture>
							<fadetime>300</fadetime>
							<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>172</left>
							<top>8</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</focusedlayout>
				<itemlayout height="360" width="420" condition="Container.Content(files) | Container.Content(episodes)">
					<control type="image">
						<width>420</width>
						<height>360</height>
						<aspectratio>scale</aspectratio>
						<texture fallback="DefaultFallback.png" background="true">$INFO[ListItem.Thumb]</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<width>420</width>
						<height>360</height>
						<texture border="0,0,0,50">thumbs/diffuse_music.png</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="label">
						<top>310</top>
						<width>420</width>
						<height>40</height>
						<align>center</align>
						<textoffsetx>10</textoffsetx>
						<textcolor>grey</textcolor>
						<info>ListItem.Label</info>
					</control>
					<control type="image">
						<left>360</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="360" width="420" condition="Container.Content(files) | Container.Content(episodes)">
					<control type="group">
						<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="image">
							<width>420</width>
							<height>360</height>
							<aspectratio>scale</aspectratio>
							<texture fallback="DefaultFallback.png" background="true">$INFO[ListItem.Thumb]</texture>
							<fadetime>300</fadetime>
							<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>352</left>
							<top>8</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>30</top>
				<width>14</width>
				<height>1035</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
			<control type="group">
				<visible>![Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
				<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
				<control type="button">
					<top>890</top>
					<left>90</left>
					<width>1740</width>
					<height>90</height>
					<font>font16_title</font>
					<textcolor>white</textcolor>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<label2>[B]$INFO[ListItem.Label2][/B]</label2>
					<textoffsetx>30</textoffsetx>
					<texturenofocus>-</texturenofocus>
					<enable>no</enable>
					<disabledcolor>white</disabledcolor>
				</control>
			</control>
		</control>
	</include>
	<!-- Music Wall -->
