<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Favorite List -->
	<include name="FavList">
		<control type="group">
			<top>120</top>
			<control type="image">
				<left>1276</left>
				<width>560</width>
				<height>840</height>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture background="true">$INFO[Container(450).ListItem.Icon]</texture>
				<fadetime>IconCrossfadeTime</fadetime>
			</control>
			<control type="list" id="450">
				<left>90</left>
				<width>1150</width>
				<height>840</height>
				<onleft>450</onleft>
				<onright condition="Control.IsVisible(60)">60</onright>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="120" width="1150">
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>IconCrossfadeTime</fadetime>
						<colordiffuse>grey</colordiffuse>
					</control>
					<control type="label">
						<left>135</left>
						<top>0</top>
						<width>960</width>
						<height>120</height>
						<font>font30</font>
						<textcolor>grey</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>100</left>
						<width>960</width>
						<height>120</height>
						<font>font15</font>
						<align>right</align>
						<textcolor>themecolor</textcolor>
						<selectedcolor>selected</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="120" width="1150">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>1150</width>
						<height>120</height>
						<texture>listselect_fo.png</texture>
						<colordiffuse>listselect</colordiffuse>
						<visible>Control.HasFocus(450)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>IconCrossfadeTime</fadetime>
					</control>
					<control type="label">
						<left>135</left>
						<top>0</top>
						<width>960</width>
						<height>120</height>
						<font>font30</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
					<control type="label">
						<left>100</left>
						<width>960</width>
						<height>120</height>
						<font>font15</font>
						<align>right</align>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
	<!-- Favorite Panel -->
	<include name="FavPanel">
		<control type="group">
			<control type="panel" id="450">
				<left>120</left>
				<top>120</top>
				<width>1680</width>
				<height>840</height>
				<onleft>450</onleft>
				<onright condition="Control.IsVisible(60)">60</onright>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="420" width="420">
					<control type="image">
						<width>420</width>
						<height>420</height>
						<aspectratio aligny="top">scale</aspectratio>
						<texture fallback="DefaultFallbackFavourite.png" background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="image">
						<width>420</width>
						<height>420</height>
						<texture border="0,0,0,50">thumbs/diffuse_music.png</texture>
						<fadetime>300</fadetime>
					</control>
					<control type="label">
						<top>377</top>
						<width>420</width>
						<height>30</height>
						<align>center</align>
						<textoffsetx>10</textoffsetx>
						<textcolor>grey</textcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="420" width="420">
					<control type="group">
						<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="image">
							<width>420</width>
							<height>420</height>
							<aspectratio aligny="top">scale</aspectratio>
							<texture fallback="DefaultFallbackFavourite.png" background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>300</fadetime>
							<bordertexture colordiffuse="themecolor" border="9">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
				<control type="button">
					<top>960</top>
					<left>90</left>
					<width>1740</width>
					<height>90</height>
					<font>font16_title</font>
					<textcolor>white</textcolor>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<textoffsetx>30</textoffsetx>
					<texturenofocus>-</texturenofocus>
					<enable>no</enable>
					<disabledcolor>white</disabledcolor>
				</control>
			</control>
		</control>
	</include>
</includes>